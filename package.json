{
	"name": "p-cli",
	"version": "1.0.0",
	"description": "项目管理 CLI 工具 - 快速创建和管理项目",
	"type": "module",
	"bin": {
		"p": "./dist/index.js"
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target bun && bun run scripts/copy-config.ts",
		"dev": "bun run src/index.ts",
		"link": "bun run build && bun link"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"commander": "^14.0.2",
		"fs-extra": "^11.3.3",
		"picocolors": "^1.1.1",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "latest",
		"@types/fs-extra": "^11.0.4"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
